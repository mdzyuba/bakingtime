<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mdzyuba.bakingtime.widget">

    <application
        android:allowBackup="false"
        android:theme="@style/AppTheme">
        <receiver android:name=".BakingTimeWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.mdzyuba.bakingtime.widget.UPDATE_RECIPE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_time_widget_provider_info" />
        </receiver>
        <service
            android:name="com.mdzyuba.bakingtime.widget.IngredientsListService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false"/>
        <activity android:name=".BakingTimeWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
    </application>

</manifest>
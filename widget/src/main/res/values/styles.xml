<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recipeIngredient" parent="TextAppearance.AppCompat.Title">
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="recipeServings" parent="TextAppearance.AppCompat.Title">
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="recipeTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

</resources>
